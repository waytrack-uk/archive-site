---
// src/pages/safety-labels.astro
import Layout from '../layouts/Layout.astro';

const safetyInfo = [
    {
        title: "Online Platform",
        description: "Archive operates as an online platform under EU DSA regulations, facilitating social interaction and user-generated content sharing.",
        icon: "/users.svg"
    },
    {
        title: "Hosting Service",
        description: "We provide hosting services for user content and community interactions in compliance with EU hosting regulations.",
        icon: "/folder.svg"
    },
    {
        title: "Content Moderation",
        description: "Archive maintains content moderation practices to ensure community safety and compliance with EU digital service requirements.",
        icon: "/shield.svg" 
    },
    {
        title: "Data Protection",
        description: "We process personal data in accordance with GDPR and maintain appropriate security measures for user information protection.",
        icon: "/lock.svg"
    }
];
---

<Layout title="Safety Labels & Compliance">
    <div class="min-h-[calc(100vh-5rem)] w-full flex items-start md:items-center">
        <div class="w-full pr-6 md:px-0 pt-8 md:pt-0">
            <div class="ml-auto md:mx-auto w-full max-w-[500px] px-6 md:px-8 font-baskerville">
                {safetyInfo.map((info) => (
                    <div class="mb-8 md:mb-12 flex items-start">
                        <div class="w-16 h-16 md:w-20 md:h-20 rounded-full overflow-hidden flex-shrink-0 mr-4 flex items-center justify-center">
                            <img 
                                src={info.icon} 
                                alt={`${info.title} icon`} 
                                class="w-1/2 h-1/2 object-contain"
                            />
                        </div>
                        <div>
                            <h2 class="text-2xl md:text-[2.2rem] font-semibold mb-1 md:mb-2 text-text-primary">
                                {info.title}
                            </h2>
                            <p class="text-base md:text-xl leading-relaxed text-gray-600">
                                {info.description}
                            </p>
                        </div>
                    </div>
                ))}

                <div class="mt-10 pb-20 border-t border-gray-200">
                    <p class="text-base md:text-lg text-gray-600 text-center">
                        For detailed information about our compliance with EU regulations or any questions about our safety practices, please contact Alexander Bloom at alexanderbloom@waytrack.co.uk
                    </p>
                </div>
            </div>
        </div>
    </div>
</Layout>