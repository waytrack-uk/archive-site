---
// src/layouts/Layout.astro
import '../styles/base.css';
import Nav from '../components/Nav.astro';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="bg-[#f2e8d5] font-sans">
    <head>
        <meta charset="UTF-8" />
        <meta property="og:title" content="Get Archive" />
        <meta property="og:description" content="Films. Music. Books. Podcasts" /> <!-- Use your actual description -->
        <meta property="og:url" content="https://getarchive.co.uk/" />
        <meta property="og:image" content="https://getarchive.co.uk/logo.png" />
        <meta property="og:image:alt" content="Archive Logo" /> <!-- More descriptive alt text -->
        <meta property="og:type" content="website" />
        <meta name="viewport" content="width=device-width" />
        <meta name="description" content="Films. Music. Books. Podcasts" />
        <link rel="icon" type="image/x-icon" href="/favicon.ico" />
        <link rel="shortcut icon" href="/favicon.ico" />
        <link rel="icon" type="image/png" href="/favicon.ico" sizes="32x32" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
    </head>
    <body>
        <Nav />
        <main class="mt-20">
        <slot />
        </main>
    </body>
</html>