---
// src/components/Hero.astro
---

<section class="min-h-screen w-full flex justify-center items-center -mt-[120px] md:-mt-[80px] px-4 sm:px-6 relative">
  <div class="flex flex-col md:flex-row md:items-center items-center relative max-w-6xl w-full mx-auto">
    <!-- New image column -->
    <div class="hidden md:block md:w-1/2 pr-8 opacity-0 animate-[fadeIn_1s_ease_forwards_0.3s]">
      <div class="relative max-w-[450px]">
        <img 
          src="/connectrecord.png" 
          alt="Connect, Record, Discover" 
          class="w-full h-auto object-cover"
        />
      </div>
    </div>
    
    <!-- Existing hero content - adjusted to be centered vertically -->
    <div class="md:w-1/2 flex flex-col items-center md:items-start justify-center">
      <div 
          class="font-serif text-7xl md:text-9xl text-center md:text-left opacity-0 animate-[fadeIn_1s_ease_forwards]"
          style="font-family: Baskerville, serif;"
      >
          Archive.
      </div>
      <div class="h-3 sm:h-4"></div>
      <p 
          class="font-serif text-2xl md:text-3xl text-[#666666] m-0 text-center md:text-left opacity-0 animate-[fadeIn_1s_ease_forwards_0.5s]"
          style="font-family: Baskerville, serif;"
      >
          Be Curious.
      </p>
      <div class="h-8"></div>
      <a 
          href='https://apps.apple.com/gb/app/archive-be-curious/id6738609084'
          class="flex text-xl items-center bg-gradient-to-b from-black to-gray-700 text-white px-6 py-[5px] rounded-[10px] opacity-0 animate-[fadeIn_1s_ease_forwards_1s] hover:opacity-80 transition-opacity mt-[24px]"
          style="font-family: Baskerville, serif;"
          target="_blank"
          rel="noopener noreferrer"
      >
          <svg class="w-6 h-10 mr-5" viewBox="0 0 384 512" fill="currentColor">
              <path d="M318.7 268.7c-.2-36.7 16.4-64.4 50-84.8-18.8-26.9-47.2-41.7-84.7-44.6-35.5-2.8-74.3 20.7-88.5 20.7-15 0-49.4-19.7-76.4-19.7C63.3 141.2 4 184.8 4 273.5q0 39.3 14.4 81.2c12.8 36.7 59 126.7 107.2 125.2 25.2-.6 43-17.9 75.8-17.9 31.8 0 48.3 17.9 76.4 17.9 48.6-.7 90.4-82.5 102.6-119.3-65.2-30.7-61.7-90-61.7-91.9zm-56.6-164.2c27.3-32.4 24.8-61.9 24-72.5-24.1 1.4-52 16.4-67.9 34.9-17.5 19.8-27.8 44.3-25.6 71.9 26.1 2 49.9-11.4 69.5-34.3z"/>
          </svg>
          Download on the App Store
      </a>
    </div>
  </div>
  
  <!-- Scroll indicator -->
  <div class="absolute bottom-16 left-0 right-0 flex justify-center opacity-0 animate-[fadeIn_1s_ease_forwards_1.3s]">
    <button 
      id="scrollToMarketingBtn"
      class="flex flex-col items-center cursor-pointer hover:opacity-80 transition-opacity"
      aria-label="Scroll to learn more"
    >
      <span class="font-serif text-lg" style="font-family: Baskerville, serif;">Learn More</span>
      <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="custom-bounce -mt-2">
        <path d="M7 13l5 5 5-5"></path>
      </svg>
    </button>
  </div>
</section>

<style>
  @keyframes fadeIn {
    0% {
      opacity: 0;
      transform: translateY(10px);
    }
    100% {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes slowBounce {
    0%, 100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(6px);
    }
  }

  .custom-bounce {
    animation: slowBounce 2s ease-in-out infinite;
  }
</style>

<script>
  document.getElementById('scrollToMarketingBtn')?.addEventListener('click', () => {
    const marketingSection = document.querySelector('section:nth-of-type(2)');
    if (marketingSection) {
      // Check if we're on mobile
      const isMobile = window.innerWidth < 768; // 768px is the md breakpoint in Tailwind
      
      if (isMobile) {
        // For mobile, scroll to a position very close to the marketing section
        const offset = 20; // Very small offset to scroll almost to the section top
        const sectionTop = marketingSection.getBoundingClientRect().top + window.pageYOffset;
        window.scrollTo({
          top: sectionTop - offset,
          behavior: 'smooth'
        });
      } else {
        // For desktop, scroll normally to the section
        marketingSection.scrollIntoView({ behavior: 'smooth' });
      }
    }
  });
</script>