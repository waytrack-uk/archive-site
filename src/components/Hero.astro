---
// src/components/Hero.astro
import Title from './Title.astro';
---

<section class="h-screen w-full flex justify-center items-center -mt-[150px]">
    <div class="flex flex-col items-center relative">
        <Title />
        <div class="h-4"></div>
        <p class="font-['Baskerville',_serif] text-3xl text-[#666] m-0 opacity-0 translate-y-[10px] animate-fadeIn">
            Be Curious.
        </p>
    </div>
</section>

<!-- Custom animation -->
<style>
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fadeIn {
    animation: fadeIn 1s ease forwards;
    animation-delay: 1s;
  }
</style>