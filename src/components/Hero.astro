// src/components/Hero.astro
---

<section class="h-screen w-full flex justify-center items-center -mt-[150px]">
  <div class="flex flex-col items-center relative">
      <div class="font-['Baskerville',_serif] text-9xl opacity-0 translate-y-[10px] animate-fadeIn">
          Archive
      </div>
      <div class="h-4"></div>
      <p class="font-['Baskerville',_serif] text-3xl text-[#666] m-0 opacity-0 translate-y-[10px] animate-fadeInDelayed">
          Be Curious.
      </p>
  </div>
</section>

<style>
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(10px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.animate-fadeIn {
  animation: fadeIn 1s ease forwards;
}

.animate-fadeInDelayed {
  animation: fadeIn 1s ease forwards;
  animation-delay: 0.5s;
}
</style>