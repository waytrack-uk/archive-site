// src/components/Hero.astro
---

<section class="min-h-screen w-full flex justify-center items-center -mt-[150px] md:-mt-[150px] px-4 sm:px-6">
    <div class="flex flex-col items-center relative">
        <div 
            class="font-serif text-7xl  md:text-9xl text-center opacity-0 translate-y-[10px] animate-[fadeIn_1s_ease_forwards]"
            style="font-family: Baskerville, serif;"
        >
            Archive
        </div>
        <div class="h-3 sm:h-4"></div>
        <p 
            class="font-serif text-2xl md:text-3xl text-[#666666] m-0 text-center opacity-0 translate-y-[10px] animate-[fadeIn_1s_ease_forwards] delay-500"
            style="font-family: Baskerville, serif;"
        >
            Be Curious.
        </p>
    </div>
</section>

<style>
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(10px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.animate-fadeIn {
  animation: fadeIn 1s ease forwards;
}

.animate-fadeInDelayed {
  animation: fadeIn 1s ease forwards;
  animation-delay: 0.5s;
}
</style>