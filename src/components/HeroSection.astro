---
import TypingAnimation from './ArchiveAnimation.astro';
---

<section class="hero-section">
  <div class="content-wrapper">
    <TypingAnimation />
    <div class="spacer"></div>
    <p class="tagline">Read it. Watch it. Share it.</p>
  </div>
</section>

<style>
  .hero-section {
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .content-wrapper {
    display: flex;
    flex-direction: column;
    align-items: center;
    position: relative;
  }

  .spacer {
    height: 1rem; /* Adjust this value to control the space */
  }

  .tagline {
    font-family: 'Baskerville', serif;
    font-size: 1.5rem;
    color: #666;
    opacity: 0;
    transform: translateY(10px);
    animation: fadeIn 1s ease forwards;
    animation-delay: 2.2s;
    margin: 0;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>