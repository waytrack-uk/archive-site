---
const text = "Archive.";
const typingSpeed = 275;
---

<style>
  .container {
    text-align: center;
    width: 100%;
  }
  .archive-title {
    font-family: 'Baskerville', serif;
    font-size: 8rem;
    display: inline-flex;
    position: relative;
    transition: all 0.2s ease;
    min-width: 20px; /* Ensures initial space for cursor */
  }
  .text-wrapper {
    display: inline-block;
    transition: width 0.2s ease;
  }
  .letter {
    display: none;
  }
  .letter.visible {
    display: inline-block;
    /* Removed animation property - letters will now appear instantly */
  }
  .cursor {
    position: absolute;
    width: 2px;
    height: 7rem;
    background-color: #000;
    animation: blink 1s infinite;
    right: -4px;
    top: 50%;
    transform: translateY(-50%);
  }
  .cursor.hidden {
    display: none;
  }
  @keyframes blink {
    0%, 45% {
      opacity: 1;
    }
    46%, 100% {
      opacity: 0;
    }
  }
</style>

<div class="container">
  <div class="archive-title">
    <div class="text-wrapper">
      {text.split("").map((letter) => (
        <span class="letter">{letter}</span>
      ))}
    </div>
    <span class="cursor"></span>
  </div>
</div>

<script define:vars={{ typingSpeed }}>
  document.addEventListener("DOMContentLoaded", () => {
    const letters = document.querySelectorAll('.letter');
    const cursor = document.querySelector('.cursor');
    const totalTypingTime = letters.length * typingSpeed;
    
    letters.forEach((letter, index) => {
      setTimeout(() => {
        letter.classList.add('visible');
      }, index * typingSpeed);
    });

    setTimeout(() => {
      cursor.classList.add('hidden');
    }, totalTypingTime + 500);
  });
</script>